<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DogActivity" >

    <Button
        android:id="@+id/btnNormal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="showNormal"
        android:text="Show normal dialog" />

    <Button
        android:id="@+id/btnWaiting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="showWaiting"
        android:text="Show waiting dialog" />

    <Button
        android:id="@+id/btnDownloading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="showDownloading"
        android:text="Show downloading dialog" />

    <Button
        android:id="@+id/btnDog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="showDog"
        android:text="Play Dog" />

    <Button
        android:id="@+id/btnBrowser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="showBrowser"
        android:text="Show external browser" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="13"
        android:thumb="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />

    <ImageView
        android:id="@+id/dogImg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.79"
        android:src="@drawable/ic_launcher" />

</LinearLayout>