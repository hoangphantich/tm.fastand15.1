<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Nang_SGActivity" >

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:layout_x="115dp"
        android:layout_y="31dp" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:layout_x="20dp"
        android:layout_y="30dp"
        android:text="Dring"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="90dp"
        android:text="Quantity"
        android:textSize="24sp" />

    <Button
        android:id="@+id/MinusBtn"
        style="android:buttonStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_x="120dp"
        android:layout_y="85dp"
        android:text="-" />

    <Button
        android:id="@+id/PlusBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_x="254dp"
        android:layout_y="85dp"
        android:text="+" />

    <TextView
        android:id="@+id/Quantity_tb"
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:layout_x="162dp"
        android:layout_y="85dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:scrollHorizontally="false"
        android:text="0"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="150dp"
        android:text="Tip"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/Tip_tb"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_x="120dp"
        android:layout_y="155dp"
        android:text="10%"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="210dp"
        android:text="Total fee"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/Tatal_tb"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_x="156dp"
        android:layout_y="210dp"
        android:text="_"
        android:textSize="24sp" />

    <Button
        android:id="@+id/CalculateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="163dp"
        android:layout_y="279dp"
        android:text="Calculate"
        android:textSize="20sp" />

</AbsoluteLayout>
