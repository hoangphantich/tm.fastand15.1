<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="17dp"
        android:layout_y="15dp"
        android:text="Name" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="17dp"
        android:layout_y="62dp"
        android:text="Quanlity" />

    <EditText
        android:id="@+id/NameID"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_x="89dp"
        android:layout_y="1dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/QuanID"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_x="89dp"
        android:layout_y="53dp"
        android:ems="10" />

    <Button
        android:id="@+id/CalID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="180dp"
        android:layout_y="102dp"
        android:text="Calculate" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="5dp"
        android:layout_y="300dp"
        android:text="Total free" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:layout_y="267dp" />

    <EditText
        android:id="@+id/TotalID"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_x="95dp"
        android:layout_y="292dp"
        android:ems="10" />

    <EditText
        android:id="@+id/VatID"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_x="95dp"
        android:layout_y="321dp"
        android:ems="10" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="5dp"
        android:layout_y="330dp"
        android:text="VAT" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="38dp"
        android:layout_y="366dp"
        android:text="TOTAL (Include VAT)" />

    <EditText
        android:id="@+id/TotalInID"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_x="48dp"
        android:layout_y="386dp"
        android:ems="10" />

    <GridView
        android:id="@+id/GvID"
        android:layout_width="268dp"
        android:layout_height="114dp"
        android:layout_x="10dp"
        android:layout_y="154dp"
        android:horizontalSpacing="@dimen/activity_horizontal_margin"
        android:numColumns="3"       
        android:verticalSpacing="@dimen/activity_horizontal_margin" >

    </GridView>

</AbsoluteLayout>