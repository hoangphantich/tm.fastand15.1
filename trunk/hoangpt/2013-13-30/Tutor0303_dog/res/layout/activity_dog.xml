<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DogActivity" >

    <Button
        android:id="@+id/btnNormal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Show normal dialog" 
        android:onClick="showNormal" />
    <Button
        android:id="@+id/btnWaiting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Show waiting dialog" 
        android:onClick="showWaiting" />
    <Button
        android:id="@+id/btnDownloading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Show downloading dialog" 
        android:onClick="showDownloading"/>
    <Button
        android:id="@+id/btnDog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Show internal imageview" 
        android:onClick="showDog"/>
    <Button
        android:id="@+id/btnBrowser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Show external browser" 
        android:onClick="showBrowser"/>

    <ImageView
        android:id="@+id/dogImg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/ic_launcher" />

</LinearLayout>
